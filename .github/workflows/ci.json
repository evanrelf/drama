{
  "jobs": {
    "build-ghc8103": {
      "needs": [
        "check-ci-config"
      ],
      "runs-on": "ubuntu-latest",
      "steps": [
        {
          "name": "Checkout",
          "uses": "actions/checkout@v2.3.4"
        },
        {
          "name": "Install Nix",
          "uses": "cachix/install-nix-action@v12",
          "with": {
            "nix_path": "nixpkgs=./nix/pkgs.nix"
          }
        },
        {
          "name": "Set up Cachix",
          "uses": "cachix/cachix-action@v8",
          "with": {
            "authToken": "${{ secrets.CACHIX_AUTH_TOKEN }}",
            "name": "evanrelf"
          }
        },
        {
          "name": "nix-build",
          "run": "nix-build"
        }
      ]
    },
    "build-ghc865": {
      "needs": [
        "check-ci-config"
      ],
      "runs-on": "ubuntu-latest",
      "steps": [
        {
          "name": "Checkout",
          "uses": "actions/checkout@v2.3.4"
        },
        {
          "name": "Install Nix",
          "uses": "cachix/install-nix-action@v12",
          "with": {
            "nix_path": "nixpkgs=./nix/pkgs.nix"
          }
        },
        {
          "name": "Set up Cachix",
          "uses": "cachix/cachix-action@v8",
          "with": {
            "authToken": "${{ secrets.CACHIX_AUTH_TOKEN }}",
            "name": "evanrelf"
          }
        },
        {
          "name": "nix-build",
          "run": "nix-build --attr drama --argstr ghcVersion 'ghc865'"
        }
      ]
    },
    "build-ghc884": {
      "needs": [
        "check-ci-config"
      ],
      "runs-on": "ubuntu-latest",
      "steps": [
        {
          "name": "Checkout",
          "uses": "actions/checkout@v2.3.4"
        },
        {
          "name": "Install Nix",
          "uses": "cachix/install-nix-action@v12",
          "with": {
            "nix_path": "nixpkgs=./nix/pkgs.nix"
          }
        },
        {
          "name": "Set up Cachix",
          "uses": "cachix/cachix-action@v8",
          "with": {
            "authToken": "${{ secrets.CACHIX_AUTH_TOKEN }}",
            "name": "evanrelf"
          }
        },
        {
          "name": "nix-build",
          "run": "nix-build --attr drama --argstr ghcVersion 'ghc884'"
        }
      ]
    },
    "check-ci-config": {
      "runs-on": "ubuntu-latest",
      "steps": [
        {
          "name": "Checkout",
          "uses": "actions/checkout@v2.3.4"
        },
        {
          "run": "./scripts/generate-ci-json && git diff --exit-code"
        }
      ]
    }
  },
  "name": "ci",
  "on": {
    "pull_request": {},
    "push": {
      "branches": [
        "main"
      ]
    }
  }
}
